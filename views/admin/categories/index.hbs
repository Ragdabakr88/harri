<div class="row">
    <div class="col-sm-4">
        <h1>قسم جديد </h1>
        <form action="/admin/categories/create" method="post">
                <div class="form-group">
                    <label for="name">الاسم </label>
                    <input type="text" name="name" placeholder="ادخل العنوان " class="form-control">
                </div>
            <button class="btn btn-primary">قسم جديد </button>
        </form>
      </div>
     <br>
    <hr>
</div>
<br>
<div class="row">
    <div class="col-sm-8">
      <h1>الاقسام </h1>
         <table class="table">
            <thead>
            <tr>
                <th>id</th>
                <th>الاسم </th>
            </tr>
            </thead>
            <tbody>
            {{#each categories}}
                <tr>
                    <td>{{id}}</td>
                    <td>{{name}}</td>
                    <td><a href="/admin/categories/edit/{{id}}" class="btn btn-info">تعديل </a></td>
                    <td>
                        <form action="/admin/categories/{{id}}?_method=DELETE" method="post">
                            <button class="btn btn-danger">حذف </button>
                        </form>
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
</div>